<body>
    <nav class="navbar navbar-expand-md  sticky-top" style="background-color: rgba(22, 22, 22, 0.7)">
    
        <spam class="navbar-text">
            <a class="nav-link" id="logo" href="/home"><i class="fas fa-dumbbell"> </i>Pocket PT</a>          
        </spam>
        <button class="navbar-toggler" data-toggle="collapse" data-target="#collapse_target">
            <!-- <span class="navbar-toggler-icon"></span> -->
            <i class="fas fa-bars" style="color: goldenrod; font-size:20px;"></i>
        </button>
        
        <div class="collapse navbar-collapse" id="collapse_target">
            <ul class="navbar-nav ml-auto" >
                <li class="nav-item">
                    <a class="nav-link" href="/home">Go Back</a>                     
                </li>
            </ul>
        </div>
    </nav>
    <br/>
    <form class="formcontent" action="/info" method="POST">
        <div class="form">

            <h1>Update Info</h1>
            <label>Age:</label>
            <input type="number" name="age">
            </br>
        
            <label>Height:</label>
            <input type="number" name="height" placeholder="inches">
            </br>
    
            <label>Weight</label>
            <input type="number" name="weight" placeholder="pounds">
            </br>

            <label>Gender:</label>
            <select name="gender">
                <option value="female">Female</option>
                <option value="male">Male</option>
            </select>
            <br>

            <label>Goal</label>
            <select name="goal">
                <option value="weight loss">Weight Loss</option>
                <option value="maintenance">Maintenance</option>
                <option value="muscle gain">Muscle Gain</option>
            </select>
            </br>

            <label>Experience Level</label>
            <select name="exp">
                <option value="beginner">Beginner</option>
                <option value="intermediate">Intermediate</option>
            </select>
            <br/>
            <button type="submit" class="btn btn-outline-warning">Submit</button>
        </div>
    </form>
</body>
</html>