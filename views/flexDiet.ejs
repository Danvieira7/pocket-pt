<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Porcket PT</title>
</head>
<body>
    <h1>Flexible Diet Recipes</h1>
    <div>
        <% recipe.forEach(function(r) { %>
        <tr>
            <form method="POST" action="/flexDiet/<%= r._id %>?_method=DELETE">
                <input type="submit">
            </form>
            <td><img src="<%= r.image %>" ></td>
            <td><%= r.name %></td>
            <td><%= r.description %></td>
        </tr>
        <% }); %>
    </div>
    <button><a href="/recipes/newFlex">Add Meal</a></button>
    <button><a href="/diets">Go Back</a></button>
</body>
</html>